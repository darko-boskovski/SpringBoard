                    <div class="col-md-4">
                        <label asp-for="Producer.Biography"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="Producer.Biography" placeholder="Producer Biography" />
                        </div>
                        <span asp-validation-for="Producer.Biography" class="text-danger"></span>
                    </div>
                </div>
                <div class="row navbar-right">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="Producer.Age"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="Director.Age" placeholder="Producer Age" />
                        </div>
                        <span asp-validation-for="Producer.Age" class="text-danger"></span>
                    </div>
                </div>

