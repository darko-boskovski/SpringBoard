                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="ActorTwo.FirstName"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="ActorTwo.FirstName" placeholder="ActorTwo Name" />
                        </div>
                        <span asp-validation-for="ActorTwo.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row navbar-right">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="ActorTwo.LastName"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="ActorTwo.LastName" placeholder="ActorTwo Surname" />
                        </div>
                        <span asp-validation-for="ActorTwo.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row navbar-right">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="ActorTwo.Biography"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="ActorTwo.Biography" placeholder="ActorTwo Biography" />
                        </div>
                        <span asp-validation-for="ActorTwo.Biography" class="text-danger"></span>
                    </div>
                </div>
                <div class="row navbar-right">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="ActorTwo.Age"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="ActorTwo.Age" placeholder="ActorTwo Age" />
                        </div>
                        <span asp-validation-for="ActorTwo.Age" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row navbar-right">
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success">Add Movie</button>
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
