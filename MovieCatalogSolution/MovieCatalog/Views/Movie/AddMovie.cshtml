@model MovieViewModel

<h2>Add Movie</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddMovie" asp-controller="Movie" method="post">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="Title"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="Title" placeholder="Movie Title" />
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="ReleaseDate"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="ReleaseDate" placeholder="Release Date" />
                        </div>
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>
                </div>
                <label asp-for="Genre"></label>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <span class="input-group-addon">@Html.LabelFor(x => x.Genre)</span>
                        @Html.DropDownList($"model.Genre", Html.GetEnumSelectList(Model.Genre.GetType()), new { @class = "form-control" })
                    </div>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="Description"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-home"></span></span>
                            <input class="form-control" type="text" asp-for="Description" placeholder="Description" />
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <br />
                Direcor:
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="Director.FirstName"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="Director.FirstName" placeholder="Director Name" />
                        </div>
                        <span asp-validation-for="Director.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="Director.LastName"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="Director.LastName" placeholder="Director Surname" />
                        </div>
                        <span asp-validation-for="Director.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="Director.Biography"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="Director.Biography" placeholder="Director Biography" />
                        </div>
                        <span asp-validation-for="Director.Biography" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="Director.Age"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="Director.Age" placeholder="Director Age" />
                        </div>
                        <span asp-validation-for="Director.Age" class="text-danger"></span>
                    </div>
                </div>

                Producer:
                <div class="row navbar-right">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label asp-for="Producer.FirstName"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                            <input class="form-control" type="text" asp-for="Producer.FirstName" placeholder="Producer Name" />
