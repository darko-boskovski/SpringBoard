
@model MovieViewModel

@{
    string Genre = "";

    string Cast = "";
}

@*@foreach (var member in @Model.Genre)
{
    Genre += member + ", ";
}*@

@foreach (var member in @Model.Cast)
{
    Cast += member + ", ";
}



<div class="container body-content ">
    <h3>Movie Details</h3>

    <div class="products">
        <div  id ="single-card" class="">
            <div class="half">
                <img class="" src="~/images/Movies/movie-@(Model.Id).jpg" />
            </div>
            <div class="caption">
                <h3>@Model.Title</h3>
                <h7>@Genre</h7>
                <h7>@Cast</h7>
                <h7><strong>Release Date:</strong><br /> @Model.ReleaseDate.ToShortDateString()</h7>
                <h7><strong>Description:</strong><br /> @Model.Description </h7>
            </div>
        </div>
    </div>
</div>